@model OnlineITStore.Models.Tbl_SlideImage

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container-fluid px-4">
    <h1 class="mt-4">Edit Slide Image</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="~/Admin/Dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="~/Tbl_SlideImage/SlideImages">Slide Images</a></li>
        <li class="breadcrumb-item active">Edit Slide Image</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header table-header">

            <span><i class="fas fa-table me-1"></i>Edit the category  "@Model.SlideTitle"</span>

        </div>
        <div class="card-body">
            @using (Html.BeginForm("EditSlideImage", "Tbl_SlideImage", FormMethod.Post, new { ectype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    Title:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SlideTitle, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SlideTitle, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.SlideId)
                    </div>
                </div>

                <div class="form-group">
                    Slide Image Description:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SlideDescription, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SlideDescription, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Is First?
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.IsActive, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Url to Redirect to:
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SlideUrl, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SlideUrl, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    Image URL
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SlideImage, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SlideImage, "", new { @class = "text-danger" })
                    </div>

                    OR upload an image:

                    <br />

                    @Html.TextBox("file", "", new { type = "file" })
                </div>
                <br />


                <br />
                <a href="~/Tbl_SlideImage/SlideImages" class="btn btn-danger">Cancel</a>

                <button type="submit" class="btn btn-primary" value="Save">Submit</button>


            }
        </div>
    </div>
</div>
